<UserControl x:Class="SignalRChat.Client.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignalRChat.Client"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid>
        <TextBlock x:Name="NamePlace" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="40" Width="123" FontSize="22"/>
        <TextBox x:Name="MessageTextPlace" HorizontalAlignment="Left" IsReadOnly="True" Height="40" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="362" Margin="128,0,0,0"/>
        <ScrollViewer Margin="0,50,183,0">
            <UniformGrid Name="ImagesPlace" Columns="2">
                <TextBlock></TextBlock>
            </UniformGrid>
        </ScrollViewer>
        <ScrollViewer Margin="322,50,0,0">
            <UniformGrid Name="FilesPlace" Columns="1">
                
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</UserControl>
